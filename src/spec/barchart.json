{
    "data": {
        "url": "http://localhost:3000/spreadsheets/sales.csv",
        "schema": [
        {
            "field": "Year",
            "type": "temporal"
        },
        {
            "field": "Brand",
            "type": "categorical"
        },
        {
            "field": "Category",
            "type": "categorical"
        },
        {
            "field": "Sales",
            "type": "numerical"
        }
        ]
    },
   
    "actions": [
        {
            "select": [
                {
                    "field": "Sales",
                    "aggregate": "min"
                },
                {
                    "field": "Brand"
                }
            ],
            "groupby": [
                {
                    "field": "Brand"
                }
            ],
            "filter": []
        },
        {
            "add": "chart",
            "mark": "bar"
        },
        {
            "add": "encoding",
            "channel": "x",
            "field": {"field":"Brand","type":"categorical"}
        },
        {
            "add": "encoding",
            "channel": "y",
            "field": {"field":"Sales","type":"numerical"}
        },
        {
            "add": "annotation",
            "method": ["fill", "label"]
        },
        {
            "add": "annotation",
            "method": "texture",
            "target": [
            {
                "field": "Brand",
                "value": "GMC"
            }
            ],
            "style": {
              "background-image": "http://localhost:3000/texture/stripe.png"
            }
        },
        {
            "add": "annotation",
            "method": "symbol",
            "target": [{
                "field": "Brand",
                "value": "Ford"
            }
            ],
            "style": {
              "icon-url": "http://localhost:3000/icon/rank-1.png"
            }
        },
        {
            "add": "annotation",
            "method": "symbol",
            "target": [{
                "field": "Brand",
                "value": "Hyundai"
            }
            ],
            "style": {
              "icon-url": "http://localhost:3000/icon/rank-2.png"
            }
        },
        {
            "add": "annotation",
            "method": ["regression", "contour", "label"],
            "target": [
                {
                    "field": "Brand",
                    "value": "BMW"
                },
                {
                    "field": "Brand",
                    "value": "GMC"
                },
                {
                    "field": "Brand",
                    "value": "Honda"
                },
                {
                    "field": "Brand",
                    "value": "Hyundai"
                }
            ]
        },
        {
            "add": "annotation",
            "method": ["desaturate", "reference"],
            "target": [
                {
                    "field": "Brand",
                    "value": "Mazda"
                },
                {
                    "field": "Brand",
                    "value": "Toyota"
                },
                {
                    "field": "Brand",
                    "value": "Volkswagen"
                }
            ],
            "style": {
                "color": "lightgray"
            }
        }
    ]
}