{
    "data": {
        "url": "http://chart.datacalliope.com/CarSales.csv",
        "schema": [
        {
            "field": "Year",
            "type": "temporal"
        },
        {
            "field": "Brand",
            "type": "categorical"
        },
        {
            "field": "Category",
            "type": "categorical"
        },
        {
            "field": "Sales",
            "type": "numerical"
        }
        ]
    },
    "fact": {
    "type": "distribution",
    "subspace": [],
    "measure": [
        {
        "field": "Sales",
        "aggregate": "min"
        }
    ],
    "breakdown": [
        {
        "field": "Brand"
        }
    ],
    "focus": [
    ]
    },
    "actions": [
        {
            "add": "chart",
            "mark": "bar"
        },
        {
            "add": "annotation",
            "method": "regression",
            "target": [
                {
                    "field": "Brand",
                    "value": "BMW"
                },
                {
                    "field": "Brand",
                    "value": "GMC"
                },
                {
                    "field": "Brand",
                    "value": "Honda"
                }
            ]
        }
    ]
}