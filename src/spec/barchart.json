{
    "data": {
        "url": "http://localhost:3000/spreadsheets/sales.csv",
        "schema": [
        {
            "field": "Year",
            "type": "temporal"
        },
        {
            "field": "Brand",
            "type": "categorical"
        },
        {
            "field": "Category",
            "type": "categorical"
        },
        {
            "field": "Sales",
            "type": "numerical"
        }
        ]
    },
    "fact": {
    "subspace": [],
    "measure": [
        {
        "field": "Sales",
        "aggregate": "min"
        }
    ],
    "breakdown": [
        {
        "field": "Brand"
        }
    ],
    "focus": [
        {
            "field": "Brand",
            "value": "Ford"
        }
    ]
    },
    "actions": [
        {
            "add": "chart",
            "mark": "bar"
        },
        {
            "add": "annotation",
            "method": ["fill", "label"]
        },
        {
            "add": "annotation",
            "method": ["regression", "contour", "label"],
            "target": [
                {
                    "field": "Brand",
                    "value": "BMW"
                },
                {
                    "field": "Brand",
                    "value": "GMC"
                },
                {
                    "field": "Brand",
                    "value": "Honda"
                },
                {
                    "field": "Brand",
                    "value": "Hyundai"
                }
            ]
        },
        {
            "add": "annotation",
            "method": ["desaturate", "reference"],
            "target": [
                {
                    "field": "Brand",
                    "value": "Mazda"
                },
                {
                    "field": "Brand",
                    "value": "Toyota"
                },
                {
                    "field": "Brand",
                    "value": "Volkswagen"
                }
            ],
            "style": {
                "color": "lightgray"
            }
        }
    ]
}