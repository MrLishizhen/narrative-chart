{
    "data": {
        "url": "http://localhost:3000/spreadsheets/sales.csv",
        "schema": [
        {
            "field": "Year",
            "type": "temporal"
        },
        {
            "field": "Brand",
            "type": "categorical"
        },
        {
            "field": "Category",
            "type": "categorical"
        },
        {
            "field": "Sales",
            "type": "numerical"
        }
        ]
    },
   
    "actions": [
        {
            "add": "config",
            "mode": "light",
            "emotion": "exciting"
          },
        {
            "select": [
                {
                    "field": "Sales",
                    "aggregate": "min"
                },
                {
                    "field": "Brand"
                }
            ],
            "groupby": [
                {
                    "field": "Brand"
                }
            ],
            "filter": []
        },
        {
            "add": "chart",
            "mark": {
                "type": "bar",
                "style": {}
            },
            "style": {
                "mask-image": "http://localhost:3000/texture/car-hire-hero-uk.png"
            }
        },
        {
            "add": "encoding",
            "channel": "x",
            "field":"Brand"
        },
        {
            "add": "encoding",
            "channel": "y",
            "field":"Sales"
        },
        {
            "add": "annotation",
            "method": ["label"]
        },
        {
            "add": "annotation",
            "method": "texture",
            "target": [
              {
                "field": "Brand",
                "value": "GMC"
              }
            ],
            "style": {
              "background-image": "http://localhost:3000/texture/stripe.png"
            },
            "animation": {
              "type": "wipe",
              "duration": 1000,
              "delay": 2000
            },
            "leave_space": false
        },
        {
            "add": "annotation",
            "method": "symbol",
            "target": [{
                "field": "Brand",
                "value": "Ford"
            }
            ],
            "style": {
              "icon-url": "http://localhost:3000/icon/rank-1.png"
            }
        },
        {
            "add": "annotation",
            "method": "symbol",
            "target": [{
                "field": "Brand",
                "value": "Hyundai"
            }
            ],
            "style": {
              "icon-url": "http://localhost:3000/icon/rank-2.png"
            }
        },
        {
            "add": "image",
            "style": {
                "image": "http://localhost:3000/img/undraw_data.png",
                "x": 400,
                "y": 300,
                "width": 240,
                "height": 240
            },
            "animation": {
              "duration": 2000
            }
        }
    ]
}