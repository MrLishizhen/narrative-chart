{
    "data": {
        "url": "http://localhost:3000/spreadsheets/sales.csv",
        "schema": [
        {
            "field": "Year",
            "type": "temporal"
        },
        {
            "field": "Brand",
            "type": "categorical"
        },
        {
            "field": "Category",
            "type": "categorical"
        },
        {
            "field": "Sales",
            "type": "numerical"
        }
        ]
    },
   
    "actions": [
        {
            "add": "config",
            "mode": "dark",
            "emotion": "calm"
          },
        {
            "select": [
                {
                    "field": "Sales",
                    "aggregate": "count"
                },
                {
                    "field": "Brand"
                }
            ],
            "groupby": [
                {
                    "field": "Brand"
                }
            ],
            "filter": []
        },
        {
            "add": "chart",
            "mark": {
                "type": "arc",
                "style": {
                    "inner-radius": 100, 
                    "outer-radius": 200,
                    "text-radius":245,
                    "corner-radius":5,
                    "stroke": "yellow",
                    "stroke-width":2,
                    "stroke-opacity":1,
                    "fill":"#FC4B4B",
                    "fill-opacity":0.4
                }
            },
            "style": {}
        },
        {
            "add": "encoding",
            "channel": "theta",
            "field":"Sales"
        },
        {
            "add": "encoding",
            "channel": "color",
            "field":"Brand"
        }
     
    ]
}