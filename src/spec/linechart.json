{
    "data": {
    "url": "http://chart.datacalliope.com/covid19World.csv",
    "schema": [
        {
        "field": "Date",
        "type": "temporal",
        "pictype": "time"
        },
        {
        "field": "Country",
        "type": "geographical",
        "subtype": "world",
        "pictype": "map"
        },
        {
        "field": "Confirmed Cases",
        "type": "numerical"
        },
        {
        "field": "Recovered",
        "type": "numerical"
        },
        {
        "field": "Deaths",
        "type": "numerical"
        }
    ]
    },
    "actions": [
        {
            "add": "config",
            "mode": "light",
            "emotion": "calm"
        },
        {
            "select": [
                {
                    "field": "Recovered",
                    "aggregate": "sum"
                },
                {
                    "field": "Date"
                }
            ],
            "groupby": [
                {
                    "field": "Date"
                }
            ],
            "filter": []
        },
        {
            "add": "chart",
            "mark": "line"
        },
        {
            "add": "encoding",
            "channel": "x",
            "field":"Date"
        },
        {
            "add": "encoding",
            "channel": "y",
            "field":"Recovered"
        }
    ]
}