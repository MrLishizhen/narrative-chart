{
    "data": {
        "url": "http://chart.datacalliope.com/covid19World.csv",
        "schema": [
            {
                "field": "Date",
                "type": "temporal"
            },
            {
                "field": "Country",
                "type": "geographical"
            },
            {
                "field": "Confirmed Cases",
                "type": "numerical"
            },
            {
                "field": "Recovered",
                "type": "numerical"
            },
            {
                "field": "Deaths",
                "type": "numerical"
            }
        ]
    },
    "fact": {
        "subspace": [],
        "measure": [
            {
                "field": "Confirmed Cases",
                "aggregate": "sum"
            },
            {
                "field": "Deaths",
                "aggregate": "sum"
            },
            {
                "field": "Recovered",
                "aggregate": "sum"
            }       
        ],
        "breakdown": [
            {
                "field": "Date"
            }
        ]
    },
    "actions": [
        {
            "add": "chart",
            "mark": "point"
        },
        {
            "add": "annotation",
            "target": [],
            "method": "fade"
        },
        {
            "add": "annotation",
            "target": [
                {
                    "field": "Date",
                    "value": "2020/3/20"
                }
            ],
            "method": "fill"
        }
    ]
}