{
    "data": {
        "url": "http://localhost:3000/spreadsheets/cars.csv",
        "schema": [
            {
                "field": "Name",
                "type": "categorical"
            },
            {
                "field": "Miles per Gallon",
                "type": "numerical"
            },
            {
                "field": "Cylinders",
                "type": "numerical"
            },
            {
                "field": "Displacement",
                "type": "numerical"
            },
            {
                "field": "Horsepower",
                "type": "numerical"
            },
            {
                "field": "Weight",
                "type": "numerical"
            },
            {
                "field": "Acceleration",
                "type": "numerical"
            },
            {
                "field": "Year",
                "type": "temporal"
            },
            {
                "field": "Origin",
                "type": "categorical"
            }
        ]
    },
    "fact": {
        "subspace": [],
        "measure": [
            {
                "field": "Horsepower",
                "aggregate": "sum"
            },
            {
                "field": "Miles per Gallon",
                "aggregate": "sum"
            },
            {
                "field": "Weight",
                "aggregate": "sum"
            }       
        ],
        "breakdown": [
            {
                "field": "Name"
            },
            {
                "field": "Origin"
            }
        ]
    },
    "actions": [
        {
            "select": [
                {
                    "field": "Horsepower",
                    "aggregate": "sum"
                },
                {
                    "field": "Miles per Gallon",
                    "aggregate": "sum"
                }, 
                {
                    "field": "Origin"
                },
                {
                    "field": "Weight"
                }
            ]
        },
        {
            "add": "chart",
            "mark": "point"
        },
        {
            "add": "encoding",
            "channel": "x",
            "field": "Horsepower"
        },
        {
            "add": "encoding",
            "channel": "y",
            "field": "Miles per Gallon"
        },
        {
            "add": "encoding",
            "channel": "size",
            "field": "Weight"
        },
        {
            "add": "encoding",
            "channel": "color",
            "field": "Origin"
        },
        {
            "add": "annotation",
            "method": "fade",
            "target": []
        },
        {
            "add": "annotation",
            "method": ["fill"],
            "target": [
                {
                    "field": "Name",
                    "value": "pontiac grand prix"
                },
                {
                    "field": "Name",
                    "value": "mazda glc"
                },
                {
                    "field": "Name",
                    "value": "pontiac safari (sw)"
                }
            ],
            "style": {
                "font-size": 16
            }
        },
        {
            "add": "annotation",
            "method": "label",
            "target": [
                {
                    "field": "Name",
                    "value": "mazda glc"
                }
            ],
            "style": {
                "font-size": 16
            }
        },
        {
            "add": "annotation",
            "method": "tip",
            "target": [
                {
                    "field": "Name",
                    "value": "pontiac safari (sw)"
                }
            ],
            "style": {
                "content": "This is the pontiac safari (sw)",
                "font-size": 16
            }
        },
        {
          "add": "annotation",
          "method": "symbol",
          "target": [
            {
              "field": "Name",
              "value": "pontiac grand prix"
            }
          ],
          "style": {
            "icon-url": "http://localhost:3000/icon/outlier.png"
          }
        }
    ]
}